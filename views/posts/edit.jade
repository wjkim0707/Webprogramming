extends ../layout

block content
  .container
    if post.id
      h1.page-header 수정
    else
      h1.page-header 등록

    form(action = (post.id) ? "/posts/#{post.id}?_method=PUT" : "/posts", method='POST')
      .form-group
        label(for='title') 숙소 이름
        input.form-control(type='String', id='title', name='title', placeholder='숙소 이름', value=post.title)
        .form-group
        label(for='city') 지역
        input.form-control(type='String', id='city', name='city', placeholder='도시', value=post.city)
        .form-group
        label(for='address') 주소
        input.form-control(type='String', id='address', name='address', placeholder='주소', value=post.address)
      .form-group
        label(for='fee') 이용 요금
        input.form-control(type='String', id='fee', name='fee', placeholder='이용 요금', value=post.fee)
        .form-group
        label(for='rule') 이용 규칙
        textarea.form-control(type = 'String',id='rule', name='rule', placeholder='규칙을 등록하세요.', value=post.address)
        .form-group
        label(for='facilities') 편의 시설
        textarea.form-control(type = 'String',id='facilities', name='facilities', placeholder='편의 시설을 설명하세요.', value = post.facilities)
      .form-group
        label(for='detail') 숙소 설명
        textarea.form-control(type = 'String',id='detail' , name='detail', placeholder='설명을 등록하세요.',value= post.detail)
      .form-group
        label(for='password') 비밀번호
        input.form-control(type='password', id='password', name='password', placeholder='비밀번호')
      
      div.form-actions
        a.btn.btn-default(href='javascript:window.history.back();') 뒤로 
        | 
        button.btn.btn-primary(type='submit') 완료
